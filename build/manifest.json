{
    "manifest_version": 2,
    "description": "name, description and version will be filled from package.json during the build process",
    "name": "Tag Counter",
    "version": "0.0.0",
    "icons": {
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png"
        },
        "default_title": "Tag Counter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ]
}